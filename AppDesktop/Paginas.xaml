                        WidthRequest="35"
                        Aspect="AspectFit"
                        HorizontalOptions="Start" />
                </StackLayout>
                
               

                <StackLayout Orientation="Horizontal" Padding="6">
                    <ImageButton 
                        x:Name="bntconfiguracao"
                        IsEnabled="True"
                        Source="img_configuracao.png" 
                        HeightRequest="60"
                        WidthRequest="60"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        Clicked="Botao_Configuracao"/>
